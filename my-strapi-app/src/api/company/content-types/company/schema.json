{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "company",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "link-item.link-item"
    },
    "description": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "contacts": {
      "type": "component",
      "repeatable": true,
      "component": "contact.contacts"
    },
    "vacancy": {
      "type": "component",
      "repeatable": true,
      "component": "vacancy-position.vacancy-position"
    }
  }
}
